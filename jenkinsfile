pipeline 
{
    agent any
    
    stages 
    {
        stage('Checkout') 
        {
            steps 
            {
                checkout scm
            }
        }

        stage('Build Docker Image') 
        {
            steps 
            {
                script 
                {
                    // Build the Docker image
                    sh 'docker build -t sladella91/home home'
                    sh 'docker build -t sladella91/resume resume'
                }
            }
        }

        stage('Push to Docker Hub') 
        {
            steps 
            {
                script 
                {
                    withCredentials([usernamePassword(credentialsId: 'key', passwordVariable: 'DOCKERHUB_PASSWORD', usernameVariable: 'DOCKERHUB_USERNAME')]) {
                        // Login to Docker Hub
                        sh "docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD"
                        
                        // Push the Docker image to Docker Hub
                        sh 'docker push sladella91/home'
                        sh 'docker push sladella91/resume'
            
                    }
                }
            }
        }

          stage('Deploy to EC2 instance') {
            steps {
                script {
                    sshagent(credentials: ['host-key']) {
                        sh '''
                        ssh -o StrictHostKeyChecking=no ec2-user@44.222.254.78 "sudo docker pull sladella91/home && sudo docker run -d -p 4000:4000 sladella91/home"
                        ssh -o StrictHostKeyChecking=no ec2-user@44.222.254.78 "sudo docker pull sladella91/resume && sudo docker run -d -p 8000:8000 sladella91/resume"
                        '''
                    }      
                }   
            }              
        }

    }
}
