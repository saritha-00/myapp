pipeline 
{
    agent any
    
    stages 
    {
        stage('Checkout') 
        {
            steps 
            {
                checkout scm
            }
        }

        stage('Build Docker Image') 
        {
            steps 
            {
                script 
                {
                    // Build the Docker image
                    sh 'docker build -t sarithaladella/index:V2 .'
                    sh 'docker build -t sarithaladella/resume:V2 .'
                }
            }
        }

        stage('Push to Docker Hub') 
        {
            steps 
            {
                script 
                {
                    withCredentials([usernamePassword(credentialsId: 'key', passwordVariable: 'DOCKERHUB_PASSWORD', usernameVariable: 'DOCKERHUB_USERNAME')]) {
                        // Login to Docker Hub
                        sh "docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD"

                        // Push the Docker image to Docker Hub
                        sh 'docker push sarithaladella/index:V2'
                        sh 'docker push sarithaladella/resume:V2'
                    }
                }
            }
        }

       stage('Deploy to EC2 instance') {
            steps {
                script {
                    sshagent(credentials: ['Jenkins-ssh']) {
                sh '''
                    ssh ec2-user@34.228.192.132 << EOF
                    docker pull sarithaladella/index:V2
                    docker pull sarithaladella/resume:V2
                    docker run -p 1000:80 sarithaladella/index:V2
                    docker run -p 2000:80 sarithaladella/resume:V2
                    >> EOF
                '''
            }
        }
    }
}

    }
}
