pipeline 
{
    agent any
    
    stages 
    {
        stage('Checkout') 
        {
            steps 
            {
                checkout scm
            }
        }

        stage('Build Docker Image') 
        {
            steps 
            {
                script 
                {
                    // Build the Docker image
                    sh 'docker build -t sarithaladella/indexx .'
                    sh 'docker build -t sarithaladella/resumee .'
                }
            }
        }

        stage('Push to Docker Hub') 
        {
            steps 
            {
                script 
                {
                    withCredentials([usernamePassword(credentialsId: 'key', passwordVariable: 'DOCKERHUB_PASSWORD', usernameVariable: 'DOCKERHUB_USERNAME')]) {
                        // Login to Docker Hub
                        sh "docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD"

                        // Push the Docker image to Docker Hub
                        sh 'docker push sarithaladella/indexx'
                        sh 'docker push sarithaladella/resumee'
                    }
                }
            }
        }

       stage('Deploy to EC2 instance') {
            steps {
                script {
                    sshagent(credentials: ['Jenkins-key']) {
                sh '''
                    ssh ec2-user@34.228.192.132 << EOF
                    docker pull sarithaladella/indexx
                    docker pull sarithaladella/resumee
                    docker run -d -p 1000:80 sarithaladella/indexx
                    docker run -d -p 2000:80 sarithaladella/resumee
                    >> EOF
                '''
            }
        }
    }
}

    }
}
