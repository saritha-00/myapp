# Use the official Node.js image for building the app
FROM node:16 AS build

# Set working directory
WORKDIR /app/portfolio/

# Copy package.json and install dependencies
COPY package.json /app/portfolio/
RUN npm install

# Copy the rest of the application files
COPY . /app/portfolio/

# Build the app (assuming it's a React/Angular app)
RUN npm run build

# Use the official Nginx image to serve the app
FROM nginx:latest

# Copy the built app from the previous build stage to Nginx's default directory
COPY --from=build /app/portfolio/build /usr/share/nginx/html

# Expose port 80 for Nginx
EXPOSE 80

# Start Nginx in the foreground
CMD ["nginx", "-g", "daemon off;"]



